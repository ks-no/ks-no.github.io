{
  "openapi" : "3.0.1",
  "info" : {
    "title" : "KS Fiks: Ledsagerbevis Konfigurasjon",
    "description" : "Konfigurasjon av tjenesten digitalt ledsagerbevis",
    "contact" : {
      "name" : "Fiks brukerstøtte",
      "url" : "https://ks-no.github.io/",
      "email" : "fiks-utvikling@ks.no"
    },
    "version" : "v1"
  },
  "servers" : [ {
    "url" : "https://forvaltning.fiks.ks.no",
    "description" : "KS Fiks API host",
    "variables" : { }
  }, {
    "url" : "https://forvaltning.test.fiks.ks.no",
    "description" : "KS Fiks TEST API host",
    "variables" : { }
  } ],
  "tags" : [ {
    "name" : "Ledsagerbevis Konfigurasjon",
    "description" : "API for konfigurasjon av tjenesten digitalt ledsagerbevis"
  } ],
  "paths" : {
    "/ledsagerbevis-konfigurasjon/api/v1/organisasjoner/{fiksOrgId}/register" : {
      "get" : {
        "tags" : [ "Ledsagerbevis Konfigurasjon" ],
        "summary" : "Henter status på om organisasjon har aktivert register-rolle",
        "operationId" : "hentStatus",
        "parameters" : [ {
          "name" : "fiksOrgId",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Status på om organisasjon har opprettet register-rolle",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/RolleStatusRetur"
                }
              }
            }
          }
        }
      },
      "post" : {
        "tags" : [ "Ledsagerbevis Konfigurasjon" ],
        "summary" : "Oppretter ny register-rolle som brukes til oppslag på personer",
        "operationId" : "aktiverRegisterRolle",
        "parameters" : [ {
          "name" : "fiksOrgId",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Register-rolle opprettet",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Rolle"
                }
              }
            }
          }
        }
      },
      "delete" : {
        "tags" : [ "Ledsagerbevis Konfigurasjon" ],
        "summary" : "Deaktiverer og sletter register-rolle som brukes til oppslag for personer",
        "operationId" : "deaktiverRegisterRolle",
        "parameters" : [ {
          "name" : "fiksOrgId",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Oppslag mot register deaktivert"
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "Rolle" : {
        "required" : [ "id" ],
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "string",
            "format" : "uuid"
          }
        }
      },
      "RolleStatusRetur" : {
        "required" : [ "folkeregisterStatus" ],
        "type" : "object",
        "properties" : {
          "folkeregisterStatus" : {
            "type" : "string",
            "enum" : [ "OPPRETTET", "IKKE_OPPRETTET" ]
          }
        },
        "description" : "Informasjon om status for om rolle er opprettet"
      }
    }
  }
}
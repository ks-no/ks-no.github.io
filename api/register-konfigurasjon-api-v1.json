{
  "openapi": "3.0.1",
  "info": {
    "title": "KS FIKS: Register konfigurasjon service",
    "description": "Register konfigurasjon service",
    "contact": {
      "name": "KS Fiks brukerst√∏tte",
      "url": "https://www.ks.no/fagomrader/digitalisering/utviklingsprosjekter",
      "email": "fiks-utvikling@ks.no"
    },
    "version": "v1"
  },
  "servers": [
    {
      "url": "https://api.fiks.ks.no",
      "description": "KS Fiks API host",
      "variables": {}
    },
    {
      "url": "https://api.fiks.test.ks.no",
      "description": "KS Fiks TEST API host",
      "variables": {}
    }
  ],
  "paths": {
    "/register/api/v1/konfigurasjon/rolle": {
      "post": {
        "operationId": "opprettRolle",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RolleDefinisjon"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Opprettet",
            "links": {
              "self": {
                "operationRef": "hentRolle",
                "parameters": {
                  "id": "$request.path.id"
                }
              }
            }
          },
          "400": {
            "description": "Ugyldig rolle",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://ks-no.github.io/api/fiks-common.json#/components/schemas/ErrorMessage"
                }
              }
            }
          }
        },
        "tags": [
          "konfigurasjon"
        ]
      }
    },
    "/register/api/v1/konfigurasjon/rolle/{id}": {
      "get": {
        "operationId": "hentRolle",
        "parameters": [{
          "in": "path",
          "name": "id",
          "required": true,
          "schema": {
            "type": "string",
            "pattern": "uuid"
          }
        }],
        "responses": {
          "200": {
            "description": "Finner rollen",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Rolle"
                }
              }
            }
          },
          "401": {
            "description": "Mangler tilgang til rollen",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://ks-no.github.io/api/fiks-common.json#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "404": {
            "description": "Rollen finnes ikke",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://ks-no.github.io/api/fiks-common.json#/components/schemas/ErrorMessage"
                }
              }
            }
          }
        },
        "tags": ["konfigurasjon", "oppslag"]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "fiksBearerToken": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "RolleDefinisjon": {
        "type": "object",
        "required": [
          "navn",
          "beskrivelse",
          "aktiv",
          "registre"
        ],
        "properties": {
          "navn": {
            "type": "string"
          },
          "beskrivelse": {
            "type": "string"
          },
          "aktiv": {
            "type": "boolean"
          },
          "registre": {
            "type": "object",
            "minProperties": 1,
            "properties": {
              "folkeregister": {
                "$ref": "#/components/schemas/FolkeregisterDefinisjon"
              },
              "summertSkattegrunnlag": {
                "$ref": "#/components/schemas/SummertSkattegrunnlagDefinisjon"
              },
              "kontaktregister": {
                "$ref": "#/components/schemas/KontaktregisterDefinisjon"
              }
            }
          }
        }
      },
      "Rolle": {
        "type": "object",
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          }
        },
        "allOf": [
          {
            "$ref": "#/components/schemas/RolleDefinisjon"
          }
        ]
      },
      "FolkeregisterDefinisjon": {
        "type": "object",
        "properties": {
          "tjenesteomraade": {
            "$ref": "#/components/schemas/FolkeregisterTjenesteomraade"
          },
          "bruksomraade": {
            "$ref": "#/components/schemas/FolkeregisterBruksomraade"
          },
          "kanHenteTaushetsbelagtInfo": {
            "type": "boolean",
            "readOnly": true
          },
          "dataminimering": {
            "$ref": "#/components/schemas/DataminimeringDefinisjon"
          }
        }
      },
      "DataminimeringDefinisjon": {
        "type": "object",
        "properties": {
          "felt": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "SummertSkattegrunnlagDefinisjon": {
        "type": "object",
        "properties": {}
      },
      "KontaktregisterDefinisjon": {
        "type": "object",
        "properties": {}
      },
      "FolkeregisterTjenesteomraade": {
        "type": "string",
        "enum": [
          "BARNEVERN",
          "HELSE",
          "GRAVFERDSMYNDIGHET",
          "OMSORG",
          "OPPVEKST",
          "BARNEHAGE",
          "SKATTEOPPKREVER",
          "SOSIAL",
          "TEKNISK",
          "STOTTE",
          "INNBYGGERTJENESTER",
          "NAERINGSLIV",
          "VALG",
          "INNFORDRING_INNKREVING",
          "INNVANDRING_OG_INTEGRERING",
          "SAMFUNNSSIKKERHET",
          "DEMOKRATI_AAPENHET"
        ]
      },
      "FolkeregisterBruksomraade": {
        "type": "string",
        "enum": [
          "INNBYGGERLISTE",
          "SOEK",
          "HENDELSER"
        ]
      }
    }
  }
}
        "type": "object",
        "properties": {
          "forelderRessurs": {
            "type": "string",
            "description": "UUID til ressursens forelderressurs, eller null hvis det er root",
            "format": "uuid"
          },
          "type": {
            "pattern": "^[0-9A-Z_.]+$",
            "type": "string",
            "description": "Ressursens type"

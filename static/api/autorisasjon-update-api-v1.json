          "privilegium": {
            "type": "string",
            "description": "Privilegiet som har blitt tildelt"
          },
          "ressurs": {
            "type": "string",
            "description": "Ressursen privilegiet har blitt tildelt på",
            "format": "uuid"
          }
        }
      },

          "navn": {
            "type": "string",
            "description": "Et unikt navn på privilegiet."
          },
          "visningsnavn": {
            "type": "string",
            "description": "Visningsnavn for privilegiet."
          },
          "beskrivelse": {
            "type": "string",
            "description": "En beskrivelse av hva privilegiet gir tilgang til."
          },
          "hjelpetekst": {
            "type": "string",

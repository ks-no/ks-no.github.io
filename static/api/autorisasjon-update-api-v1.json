      "AktorerType": {
        "type": "string",
        "description": "Hvilke aktørtyper dette privilegiet er gyldig for.",
        "enum": [
          "PERSON",
          "INTEGRASJON",
          "SB_BRUKER",
          "SB_GRUPPE"
        ]
      },
      "PrivilegiumMap": {
        "required": [
          "privilegier"
        ],
        "type": "object",
        "properties": {
          "privilegier": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "description": "Et map med alle privilegier for alle tjenestetyper",

{
  "openapi": "3.0.1",
  "info": {
    "title": "KS Min Kommune: Oppgave API",
    "description": "",
    "contact": {
      "name": "Fiks-brukerstøtte",
      "url": "https://ks-no.github.io/",
      "email": "fiks-utvikling@ks.no"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    },
    "version": "v1"
  },
  "servers": [
    {
      "url": "https://api.fiks.ks.no",
      "description": "KS Fiks API host"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "tags": [
    {
      "name": "Min Kommune Oppgave Ekstern service",
      "description": "API for håndtering av oppgaver for eksterne systemer"
    }
  ],
  "paths": {
    "/min-kommune/api/v1/api/{fiksOrgId}/oppgaver": {
      "post": {
        "tags": [
          "OppgaveOpprett"
        ],
        "summary": "Opprett oppgave",
        "operationId": "opprettOppgave",
        "parameters": [
          {
            "name": "fiksOrgId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OppgaveOpprettRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Oppgave opprettet",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OppgaveOpprettResponse"
                }
              }
            }
          },
          "400": {
            "description": "Ukjent",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "401": {
            "description": "Ingen tilgang",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "500": {
            "description": "Systemfeil",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          }
        }
      }
    },
    "/min-kommune/api/v1/api/{fiksOrgId}/oppgaver/{oppgaveId}": {
      "get": {
        "summary": "Hent oppgave",
        "description": "New endpoint",
        "operationId": "hentOppgave",
        "parameters": [
          {
            "name": "fiksOrgId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "oppgaveId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Oppgave",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OppgaveHentResponse"
                }
              }
            }
          },
          "400": {
            "description": "Ukjent",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "401": {
            "description": "Ingen tilgang",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "500": {
            "description": "Systemfeil",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "ErrorMessage": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "integer",
            "format": "int64"
          },
          "status": {
            "type": "integer",
            "format": "int32"
          },
          "error": {
            "type": "string"
          },
          "errorId": {
            "type": "string",
            "format": "uuid"
          },
          "path": {
            "type": "string"
          },
          "originalPath": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "errorCode": {
            "type": "string"
          },
          "errorJson": {
            "type": "string"
          }
        }
      },
      "OppgaveOpprettRequest": {
        "required": [
          "tittel",
          "beskrivelse",
          "handling",
          "url",
          "mottakere",
          "utfortKriterie"
        ],
        "type": "object",
        "properties": {
          "tittel": {
            "type": "string",
            "description": "Kort beskrivelse på oppgaven"
          },
          "beskrivelse": {
            "type": "string",
            "description": "Lenger beskrivelse på oppgaven"
          },
          "handling": {
            "type": "string",
            "description": "Tekst i knappen som tar en videre til spesifisert URL",
            "example": "Gi samtykke"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "URL til side der oppgaven kan fullføres"
          },
          "frist": {
            "type": "string",
            "format": "date"
          },
          "utfortKriterie": {
            "type": "string",
            "description": "Hvor mange som må utføre oppgaven for at den skal bli markert som fullført, hvis oppgaven har mer enn én mottaker",
            "enum": [
              "ANY",
              "ALL"
            ]
          },
          "mottakere": {
            "$ref": "#/components/schemas/Mottakere"
          },
          "varsling": {
            "$ref": "#/components/schemas/Varsling"
          },
          "metadata": {
            "type": "string",
            "description": "Valgfri ekstra data tilknyttet oppgaven, f.eks. en ekstern referanse"
          }
        }
      },
      "OppgaveOpprettResponse": {
        "required": [
          "id"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "OppgaveHentResponse": {
        "type": "object",
        "required": [
          "id",
          "tittel",
          "beskrivelse",
          "handling",
          "mottakere",
          "utfortKriterie"
        ],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "tittel": {
            "type": "string",
            "description": "Kort beskrivelse på oppgaven"
          },
          "beskrivelse": {
            "type": "string",
            "description": "Lenger beskrivelse på oppgaven"
          },
          "handling": {
            "type": "string",
            "description": "Tekst i knappen som tar en videre til spesifisert URL",
            "example": "Gi samtykke"
          },
          "frist": {
            "type": "string",
            "format": "date"
          },
          "utfortKriterie": {
            "type": "string",
            "description": "Hvor mange som må utføre oppgaven for at den skal bli markert som fullført, hvis oppgaven har mer enn én mottaker",
            "enum": [
              "ANY",
              "ALL"
            ]
          },
          "mottakere": {
            "$ref": "#/components/schemas/Mottakere"
          },
          "metadata": {
            "type": "string",
            "description": "Valgfri ekstra data tilknyttet oppgaven, f.eks. en ekstern referanse"
          }
        }
      },
      "Mottakere": {
        "required": [
          "personIdList"
        ],
        "type": "object",
        "properties": {
          "personIdList": {
            "type": "array",
            "description": "Fødselsnummer eller D-nummer til personen som mottar oppgaven",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          }
        }
      },
      "Varsling": {
        "type": "object",
        "required": [],
        "properties": {
          "purringIntervallDager": {
            "type": "integer",
            "format": "int32",
            "minimum": 0,
            "default": 0,
            "description": "Antall dager mellom hver purring. Purring blir ikke sendt dersom verdien er 0."
          }
        }
      }
    }
  }
}
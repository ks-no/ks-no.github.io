                "schema" : {
                  "$ref" : "#/components/schemas/ErrorMessage"
                }
              }
            }
          }
        }
      }
    },
    "/varsling/api/v1/send/{avsenderId}/sms" : {
      "post" : {
        "tags" : [ "Varsling" ],
        "description" : "Sender sms",
        "operationId" : "sendSms",
        "parameters" : [ {
          "name" : "avsenderId",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        } ],
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/SmsMeldingRequest"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "200" : {
            "description" : "Send sms",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/SmsId"
                }
              }
            }
          },
          "403" : {
            "description" : "Ingen tilgang",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "500" : {
            "description" : "Systemfeil",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/ErrorMessage"
                }
              }
            }
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "KontoRespons" : {
        "required" : [ "avsender", "konteringskode", "kontoId", "navn" ],
        "type" : "object",
        "properties" : {
          "kontoId" : {
            "type" : "string",
            "description" : "Konto ID",
            "format" : "uuid"
          },
          "navn" : {
            "type" : "string",
            "description" : "Navn på konto"
          },
          "avsender" : {
            "type" : "string",
            "description" : "Avsender navn eller telefonnummer"
          },
          "konteringskode" : {
            "type" : "string",
            "description" : "Konteringskode"
          }
        }
      },
      "ErrorMessage" : {
        "type" : "object",
        "properties" : {
          "timestamp" : {
            "type" : "integer",
            "format" : "int64"
          },
          "status" : {
            "type" : "integer",
            "format" : "int32"
          },
          "error" : {
            "type" : "string"
          },
          "errorId" : {
            "type" : "string",
            "format" : "uuid"
          },
          "path" : {
            "type" : "string"
          },
          "originalPath" : {
            "type" : "string"
          },
          "message" : {
            "type" : "string"
          },
          "errorCode" : {
            "type" : "string"
          },
          "errorJson" : {
            "type" : "string"
          }
        }
      },
      "OpprettKontoRequest" : {
        "required" : [ "avsender", "navn" ],
        "type" : "object",
        "properties" : {
          "navn" : {
            "type" : "string",
            "description" : "Navn på konto"
          },
          "avsender" : {
            "maxLength" : 11,
            "minLength" : 0,
            "type" : "string",
            "description" : "Navn eller telefonnummer til avsender. Maks 11 tegn"
          },
          "konteringskode" : {
            "type" : "string",
            "description" : "Avsender konteringskode"
          }
        }
      },
      "SmsId" : {
        "required" : [ "id" ],
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "string",
            "description" : "Id på melding",
            "format" : "uuid"
          }
        }
      },
      "SmsMeldingRequest" : {
        "required" : [ "tekst" ],
        "type" : "object",
        "properties" : {
          "tekst" : {
            "maxLength" : 960,
            "minLength" : 0,
            "type" : "string",
            "description" : "Sms tekst. Max 918 tegn"
          },
          "fnr" : {
            "pattern" : "^[0-9]{11}$",
            "type" : "string",
            "description" : "Fødselsnummer til mottaker"
          },
          "telefonnummer" : {
            "type" : "string",
            "description" : "Telefonnummer til mottaker"
          }
        }
      }
    }
  }
}
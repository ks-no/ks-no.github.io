              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/ErrorMessage"
                }
              }
            }
          }
        }
      }
    },
    "/varsling/api/v1/send/sms/xls/mottakere/mal" : {
      "get" : {
        "tags" : [ "Varsling" ],
        "description" : "Henter XLS mal for sms mottakere",
        "operationId" : "hentSmsMottakerXlsMal",
        "responses" : {
          "200" : {
            "description" : "XLS mottaker mal"
          },
          "500" : {
            "description" : "Systemfeil",
            "content" : {
              "application/octet-stream" : {
                "schema" : {
                  "$ref" : "#/components/schemas/ErrorMessage"
                }
              }
            }
          }
        }
      }
    },
    "/varsling/api/v1/send/{smsId}/pollForStatus" : {
      "get" : {
        "tags" : [ "Varsling" ],
        "description" : "Poller for status",
